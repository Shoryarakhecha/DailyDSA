309. Best Time to Buy and Sell Stock with Cooldown
recursive solution gives you tle
class Solution {
    public int helper(int arr[],int indx,int buy){
        if(indx>=arr.length) return 0;
        if(buy==1){
            return Math.max(-arr[indx]+helper(arr,indx+1,0),0+helper(arr,indx+1,1));
        }else{
            return Math.max(arr[indx]+helper(arr,indx+2,1),0+helper(arr,indx+1,0));
        }

    }
    public int maxProfit(int[] prices) {
        return helper(prices,0,1);
        
    }
} 
optimized solution -->memoization solution;
class Solution {
    public int dp[][];
    public int helper(int arr[],int indx,int buy){
        if(indx>=arr.length) return 0;
        if(dp[indx][buy]!=-1) return dp[indx][buy];
        int profit=0;
        if(buy==1){
            profit=Math.max(-arr[indx]+helper(arr,indx+1,0),0+helper(arr,indx+1,1));
        }else{
            profit= Math.max(arr[indx]+helper(arr,indx+2,1),0+helper(arr,indx+1,0));
        }
        return dp[indx][buy]=profit;

    }
    public int maxProfit(int[] prices) {
        dp=new int[prices.length+1][2];
        for(int[] row:dp){
            Arrays.fill(row,-1);
        }
        return helper(prices,0,1);
        
    }
}
