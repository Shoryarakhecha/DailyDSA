/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public void calMinDiff(TreeNode root,ArrayList<Integer>ans){
        if(root==null) return;
        ans.add(root.val);
        calMinDiff(root.left,ans);
        calMinDiff(root.right,ans);
    }
    public int minDiffInBST(TreeNode root) {
        ArrayList<Integer>ans=new ArrayList<>();
        calMinDiff(root,ans);
        int min=Integer.MAX_VALUE;
        Collections.sort(ans);
        for(int i=1;i<ans.size();i++){
            
            min=Math.min(min,Math.abs(ans.get(i-1)-ans.get(i)));
        }
        return min;
    }
}

using preOrder
class Solution {
    TreeNode prev=null;
    int min=Integer.MAX_VALUE;
    public void calMinDiff(TreeNode root){
        if(root==null) return;
        calMinDiff(root.left);
        if(prev!=null){
            min=Math.min(min,Math.abs(root.val-prev.val));
        }
        prev=root;
        calMinDiff(root.right);
    }
    public int getMinimumDifference(TreeNode root) {
        calMinDiff(root);
        return min;
    }
}
