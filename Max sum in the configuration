Max sum in the configuration


class Solution {
    int maxSum(int[] arr) {
        // code here
        int curSum=0;
        int arrSum=0;
        int n=arr.length;
        for(int i=0;i<n;i++){
            curSum+=arr[i]*i;
            arrSum+=arr[i];

        }
        int maxSum=curSum;
        for(int i=1;i<n;i++){
            curSum=curSum+arrSum - n*arr[n-i];
            maxSum=Math.max(maxSum,curSum);
            
        }
        return maxSum;
        
    }
}
