1513. Number of Substrings With Only 1s
class Solution {
    public int numSub(String s) {
        long MOD = 1000000007;
        long ans = 0;
        long conO = 0;
        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) == '1') {
                conO++;
            } else {
                if (conO > 0) {
                    ans = (ans + ((conO * (conO + 1)) / 2) % MOD) % MOD;
                    conO = 0;
                }
            }
        }        
        if (conO > 0) {
            ans = (ans + ((conO * (conO + 1)) / 2) % MOD) % MOD;
        }
        return (int) ans;
    }
}
